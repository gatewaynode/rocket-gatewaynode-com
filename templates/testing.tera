{% extends "base" %}

{% block content %}
<div class="intro"><h2>Shiny new blog posts with new data backend.</h2></div>
<div class="articles-list topics">
{% for post in posts %}
    <div class="article loop-{{ loop.index }}">
      <div class="title">
        <h3>
          <a href="/">{{ post.title }}</a><a name="anchor-{{ loop.index }}"></a>
        </h3>
      </div>
      <div class="time">TS: {{ post.created }}</div>
      <div class="body">{{ post.body }}</div>
      <div class="bottom-flourish"></div>
    </div>
  {% endfor %}
</div>
{% endblock content %}

